{% extends 'front/layout.html.twig' %}

{% block content %}
    <h1 class="mb-4">{{ 'cart.title'|trans }}</h1>

    {% if items is empty %}
        <div class="alert alert-info">{{ 'cart.empty'|trans }}</div>
    {% else %}
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                <tr>
                    <th>{{ 'cart.product'|trans }}</th>
                    <th>{{ 'cart.qty'|trans }}</th>
                    <th>{{ 'cart.price'|trans }}</th>
                    <th>{{ 'cart.subtotal'|trans }}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for row in items %}
                    <tr>
                        <td>{{ row.product.name }}</td>
                        <td class="text-center" style="width: 150px;">
                            <form action="{{ path('app_cart_set', {id: row.product.id}) }}" method="post" class="d-flex gap-2">
                                <input type="number" min="1" name="qty" value="{{ row.quantity }}" class="form-control form-control-sm" />
                                <button class="btn btn-sm btn-outline-primary">OK</button>
                            </form>
                        </td>
                        <td class="text-end">{{ row.product.price|number_format(2, ',', ' ') }} €</td>
                        <td class="text-end">{{ row.subtotal|number_format(2, ',', ' ') }} €</td>
                        <td class="text-end">
                            <a href="{{ path('app_cart_remove', {id: row.product.id}) }}" class="btn btn-sm btn-outline-danger">{{ 'cart.remove'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th colspan="3" class="text-end">{{ 'cart.total'|trans }}</th>
                    <th class="text-end">{{ total|number_format(2, ',', ' ') }} €</th>
                    <th></th>
                </tr>
                </tfoot>
            </table>
        </div>

        <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-secondary">{{ 'cart.clear'|trans }}</a>
    {% endif %}
{% endblock %}