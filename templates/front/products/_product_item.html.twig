<div class="col-md-4 mb-3">
    <div class="card h-100 product-item">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ product.name }}</h5>
            <p class="card-text flex-grow-1">{{ product.description|default('Pas de description.') }}</p>
            <p class="fw-bold">{{ product.price|format_currency('EUR') }}</p>
            <a href="{{ path('app_products_show', {slug: product.slug}) }}" class="btn btn-primary mt-auto">Voir le produit</a>
        </div>
    </div>
</div>
