{% extends 'front/layout.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="card-title">{{ product.name }}</h1>

                        {% if product.image %}
                            <img src="{{ asset('uploads/' ~ product.image) }}" class="img-fluid mb-3" alt="{{ product.name }}">
                        {% endif %}
                        <p class="card-text text-muted">
                            {{ product.description }}
                        </p>
                        <p class="h4 text-primary">
                            {{ product.price|number_format(2, ',', ' ') }} €
                        </p>
                        <form action="{{ path('app_cart_add', { id: product.id }) }}" method="get" class="d-flex gap-2 mt-3">
                            <input type="number" min="1" name="qty" value="1" class="form-control" style="max-width: 120px;">
                            <button class="btn btn-primary">Ajouter au panier</button>
                        </form>
                        <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">
                            ← Retour aux produits
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
